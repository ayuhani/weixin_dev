.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.screen {
  width: 680rpx;
  height: 150rpx;
  background-color: white;
  text-align: right;
  padding-right: 20rpx;
  margin: 30rpx;
  line-height: 150rpx;
  border-radius: 3px;
  border: 1px solid #ddd;
}

.btnGroup {
  display: flex;
  flex-direction: row;
}

.item {
  width: 160rpx;
  min-height: 150rpx;
  margin: 10rpx;
  border-radius: 5px;
  text-align: center;
  line-height: 150rpx;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}

/* 数字按钮 */

.blue {
  background-color: #0095cd;
  color: #d9eef7;
  border: solid 1px #0076a3;
}

/* 数字按钮按下状态 */

.button-hover-num {
  background-color: #0094cc;
  opacity: 0.9;
}

/* 控制按钮 */

.orange {
  background-color: #f78d1d;
  color: #fef4e9;
  border: 1px solid #da7c0c;
}

/* 控制按钮按下状态 */

.other-button-hover {
  background-color: #f78d1d;
  opacity: 0.9
}
